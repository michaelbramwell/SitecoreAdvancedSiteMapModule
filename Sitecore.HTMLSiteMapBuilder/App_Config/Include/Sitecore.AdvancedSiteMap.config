<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <events timingLevel="custom">
      <event name="publish:end">
        <handler type="Sitecore.AdvancedSiteMap.SiteMapBuilder, Sitecore.AdvancedSiteMap" method="BuildSiteMap" />
      </event>
      <event name="publish:end:remote">
        <handler type="Sitecore.AdvancedSiteMap.SiteMapBuilder, Sitecore.AdvancedSiteMap" method="BuildSiteMap" />
      </event>
    </events>
  </sitecore>
</configuration>